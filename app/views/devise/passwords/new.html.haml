- content_for :title, "Password Reset"
= stylesheet_link_tag "reviews.css"

.bg-white.rounded.shadow-sm.p-4.mb-5.rating-review-select-page
  %h5.mb-4 Forgotten your password?
  -# frozen_string_literal: true
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| 
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .form-inputs
      = f.input :email, required: true, input_html: { autocomplete: 'email'}
    .form-actions
      = f.button :submit, 'Send me password reset instructions', class: 'btn btn-primary btn-sm'

